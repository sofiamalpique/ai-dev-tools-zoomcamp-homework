{
  "name": "ai-dev-tools-zoomcamp-homework",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -k -r \"npm run dev -w server\" \"npm run dev -w client\"",
    "build": "npm run build -w client && npm run build -w server",
    "start": "npm run start -w server",
    "test": "playwright test --config playwright.config.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^9.0.0"
  }
}
